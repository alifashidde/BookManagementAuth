@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="width: 400px;">
        <h2 class="text-center text-success mb-4">Email Confirmed!</h2>
